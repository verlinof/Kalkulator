<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/poppinsblack"
        android:text="CALCULATOR"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_angka1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_marginRight="33dp"
        android:text="500x120"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_angka2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="33dp"
        android:text="60.000"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_angka1"
        />

    <View
        android:id="@+id/view_horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_angka2"
        android:layout_marginHorizontal="33dp"
        android:layout_marginVertical="22dp"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="28dp"
        android:layout_marginHorizontal="28dp"
        app:layout_constraintTop_toBottomOf="@id/view_horizontalLine"
        app:layout_constraintBottom_toBottomOf="parent"
        >

<!--Start Guideline-->

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical0.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical0.50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical0.75"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_horizontal0.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_horizontal0.50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_horizontal0.75"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"
            />
<!--End Guideline-->

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.25"
            app:layout_constraintEnd_toEndOf="@id/gl_vertical0.25"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="7"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.25"
            app:layout_constraintEnd_toEndOf="@id/gl_vertical0.50"
            app:layout_constraintStart_toStartOf="@id/gl_vertical0.25"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="8"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.25"
            app:layout_constraintEnd_toEndOf="@id/gl_vertical0.75"
            app:layout_constraintStart_toStartOf="@id/gl_vertical0.50"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="9"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/gl_vertical0.75"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="+"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gl_horizontal0.25"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_vertical0.25"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="4"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gl_horizontal0.25"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.50"
            app:layout_constraintStart_toStartOf="@id/gl_vertical0.25"
            app:layout_constraintEnd_toEndOf="@id/gl_vertical0.50"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="5"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gl_horizontal0.25"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.50"
            app:layout_constraintStart_toStartOf="@id/gl_vertical0.50"
            app:layout_constraintEnd_toEndOf="@id/gl_vertical0.75"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="6"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gl_horizontal0.25"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.50"
            app:layout_constraintStart_toStartOf="@id/gl_vertical0.75"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="-"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gl_horizontal0.50"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_vertical0.25"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="1"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gl_horizontal0.50"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.75"
            app:layout_constraintStart_toStartOf="@id/gl_vertical0.25"
            app:layout_constraintEnd_toEndOf="@id/gl_vertical0.50"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="2"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gl_horizontal0.50"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.75"
            app:layout_constraintStart_toStartOf="@id/gl_vertical0.50"
            app:layout_constraintEnd_toEndOf="@id/gl_vertical0.75"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="3"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gl_horizontal0.50"
            app:layout_constraintBottom_toBottomOf="@id/gl_horizontal0.75"
            app:layout_constraintStart_toStartOf="@id/gl_vertical0.75"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="/"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gl_horizontal0.75"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_vertical0.50"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="5dp"
            android:text="0"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gl_horizontal0.75"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/gl_vertical0.50"
            app:layout_constraintEnd_toEndOf="@id/gl_vertical0.75"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="5dp"
            android:text="x"
            android:textSize="32dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gl_horizontal0.75"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/gl_vertical0.75"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:backgroundTint="@color/btn_color"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="5dp"
            android:text="="
            android:textSize="32dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>